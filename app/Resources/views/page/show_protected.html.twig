{% extends 'base.html.twig' %}

{% block title %}
    {{ page.titre }}
{% endblock %}

{% block body %}
    {% if topAffichePage != true %}
        <h3>Cette page est protégée, veuillez renseigner le mot de passe : </h3>
        <div class="col-md-6">
            <div class="col-md-12">
                {{ form_start(form) }}
                {{ form_widget(form) }}
            </div>
            <div class="col-md-12">
                <div class="col-md-10"></div>
                <div class="col-md-1">
                    <input type="submit" class="btn btn-success" value="Valider" />
                </div>
            </div>
        </div>
        {{ form_end(form) }}
    {% else %}
        {{ page.contenu|raw }}
    {% endif %}
{% endblock %}




